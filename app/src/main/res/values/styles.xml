<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="information_icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="information_text">
        <item name="android:fontFamily">@font/abril_fatface</item>
        <item name="android:textColor">@color/Firmament_Blue</item>
    </style>

    <style name="Section_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">@font/abril_fatface</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textColorHint">#1EC1B1</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/Firmament_Blue</item>
    </style>
</resources>